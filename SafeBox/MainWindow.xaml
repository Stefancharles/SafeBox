<Window x:Class="SafeBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label Content="保险箱状态：" HorizontalAlignment="Left" Margin="149,76,0,0" VerticalAlignment="Top"/>
        <Label Name="labSafeBoxState" Content="Label" HorizontalAlignment="Left" Margin="251,76,0,0" VerticalAlignment="Top"/>
        <Button Name="btnDeploy" Content="布防" HorizontalAlignment="Left" Margin="123,175,0,0" VerticalAlignment="Top" Width="75" Click="btnDeploy_Click"/>
        <Button Name="btnRevoke" Content="撤防" HorizontalAlignment="Left" Margin="269,175,0,0" VerticalAlignment="Top" Width="75" Click="btnRevoke_Click" />
        <Image Name="imgWarring" HorizontalAlignment="Left" Height="100" Margin="338,31,0,0" VerticalAlignment="Top" Width="100"/>
        <Button Name="btnOpenLock" Content="开锁" HorizontalAlignment="Left" Margin="123,234,0,0" VerticalAlignment="Top" Width="75" Click="btnOpenLock_Click"/>
        <Button Content="数据查询" HorizontalAlignment="Left" Margin="269,234,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label Content="布防状态：" HorizontalAlignment="Left" Margin="149,113,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labDefenseState" Content="Label" HorizontalAlignment="Left" Margin="251,113,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
